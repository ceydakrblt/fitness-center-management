@model WebProgramlamaOdev.Models.AiExerciseRequest

@{
    ViewData["Title"] = "Yapay Zeka Egzersiz Onerisi";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Yapay Zeka Egzersiz PlanI</h4>
                </div>

                <div class="card-body">
                    <div class="alert alert-info">
                        Boy, kilo ve hedef bilgilerinizi girerek size özel egzersiz planı oluşturabilirsiniz.
                    </div>

                    <!-- VALIDATION SUMMARY -->
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <form asp-action="Index" method="post" novalidate>
                        <div class="mb-3">
                            <label asp-for="Height" class="form-label"></label>
                            <input asp-for="Height" class="form-control" placeholder="Örn: 175" />
                            <span asp-validation-for="Height" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Weight" class="form-label"></label>
                            <input asp-for="Weight" class="form-control" placeholder="Orn: 70" />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Goal" class="form-label"></label>
                            <select asp-for="Goal" class="form-select">
                                <option value="">Seciniz</option>
                                <option>Kilo verme</option>
                                <option>Kas geliştirme</option>
                                <option>Form koruma</option>
                            </select>
                            <span asp-validation-for="Goal" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-success">
                                Yapay Zeka Oner
                            </button>
                        </div>
                    </form>

                    @if (ViewBag.Result != null)
                    {
                            <hr />
                            <h5 class="mb-2">Onerilen Egzersiz Plani</h5>
                            <div class="ai-result">
                            @ViewBag.Result
                            </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
