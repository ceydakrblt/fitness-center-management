@model WebProgramlamaOdev.Models.Appointment

@{
    ViewData["Title"] = "Randevu Düzenle";
}

<div class="container mt-4">
    <h2>Randevu Düzenle</h2>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="AppointmentId" /> 
                <input type="hidden" asp-for="UserId" /> 
                <input type="hidden" asp-for="CreatedAt" /> 

                <h4 class="mb-3">Randevu Bilgileri (@Model.User?.UserName)</h4>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="TrainerId" class="form-label"></label>
                        <select asp-for="TrainerId" class="form-select" asp-items="ViewBag.TrainerId"></select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ServiceId" class="form-label"></label>
                        <select asp-for="ServiceId" class="form-select" asp-items="ViewBag.ServiceId"></select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="AppointmentDate" class="form-label"></label>
                        <input asp-for="AppointmentDate" type="date" class="form-control" />
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="StartTime" class="form-label"></label>
                        <input asp-for="StartTime" type="time" class="form-control" />
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="EndTime" class="form-label"></label>
                        <input asp-for="EndTime" type="time" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="TotalPrice" class="form-label"></label>
                    <input asp-for="TotalPrice" class="form-control" type="number" step="0.01" />
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label"></label>
                    <select asp-for="Status" class="form-select" asp-items="ViewBag.StatusList"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="Notes" class="form-label"></label>
                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Geri</a>
                    <button type="submit" class="btn btn-warning">Kaydet ve Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}