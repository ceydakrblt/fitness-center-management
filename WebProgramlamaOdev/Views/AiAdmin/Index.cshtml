@model List<WebProgramlamaOdev.Models.AiExerciseRequest>

@{
    ViewData["Title"] = "AI Requests";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">AI Exercise Requests</h4>
        </div>

        <div class="card-body">
            @if (!Model.Any())
            {
                    <div class="alert alert-warning">
                        No records found.
                    </div>
            }
            else
            {
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>UserId</th>
                                <th>Height</th>
                                <th>Weight</th>
                                <th>Goal</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.UserId</td>
                                    <td>@item.Height</td>
                                    <td>@item.Weight</td>
                                    <td>@item.Goal</td>
                                    <td>@item.CreatedAt</td>
                                    <td>
                                        <form asp-action="Delete" method="post" style="display:inline;">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit"
                                                    class="btn btn-sm btn-danger"
                                                    onclick="return confirm('Delete this record?');">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                        }
                        </tbody>
                    </table>
            }
        </div>
    </div>
</div>
