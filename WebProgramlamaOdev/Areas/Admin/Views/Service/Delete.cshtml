@model WebProgramlamaOdev.Models.Service

@{
    ViewData["Title"] = "Hizmeti Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="fw-bold mb-4 text-danger">Hizmet Sil</h2>

<div class="alert alert-danger">
    <strong>@Model.Name</strong> adlı hizmeti silmek istediğinizden emin misiniz?
</div>

<form asp-area="Admin" asp-controller="Service" asp-action="Delete" method="post">
    <input type="hidden" asp-for="ServiceId" />
    <button type="submit" class="btn btn-danger btn-lg">Sil</button>
    <a asp-area="Admin" asp-controller="Service" asp-action="Index" class="btn btn-secondary btn-lg">Geri</a>
</form>
