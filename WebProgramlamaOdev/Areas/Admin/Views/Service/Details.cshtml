@model WebProgramlamaOdev.Models.Service

@{
    ViewData["Title"] = "Hizmet Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="fw-bold mb-4">Hizmet Detayları</h2>

<div class="card shadow">
    <div class="card-body">
        <p><strong>Hizmet Adı:</strong> @Model.Name</p>
        <p><strong>Açıklama:</strong> @Model.Description</p>
        <p><strong>Süre:</strong> @Model.DurationMinutes dk</p>
        <p><strong>Ücret:</strong> @Model.Price.ToString("C")</p>
        <p><strong>Salon:</strong> @Model.Gym?.Name</p>
    </div>
</div>

<a asp-area="Admin" asp-controller="Service" asp-action="Index" class="btn btn-secondary mt-3">Geri</a>
