@model WebProgramlamaOdev.Models.TrainerAvailability

@{
    ViewData["Title"] = "Müsaitlik Sil";
}

<div class="container mt-4">
    <h3>Bu müsaitlik kaydını silmek istediğinizden emin misiniz?</h3>
    <hr />

    <dl class="row">
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Trainer)
        </dt>
        <dd class = "col-sm-9">
            @(Model.Trainer?.FullName)
        </dd>

        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.DayOfWeek)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.DayOfWeek)
        </dd>

        <dt class = "col-sm-3">
            Saat Aralığı
        </dt>
        <dd class = "col-sm-9">
            <span class="badge bg-primary">@Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")</span>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AvailabilityId" />
        <div class="mt-4">
            <button type="submit" class="btn btn-danger">Evet, Sil</button> |
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </div>
    </form>
</div>