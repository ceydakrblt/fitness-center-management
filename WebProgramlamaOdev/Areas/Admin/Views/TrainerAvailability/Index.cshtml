@model IEnumerable<WebProgramlamaOdev.Models.TrainerAvailability>
@using WebProgramlamaOdev.Models

@{
    ViewData["Title"] = "Eğitmen Müsaitlikleri";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold">📅 Eğitmen Müsaitlik Saatleri</h1>
    <a asp-action="Create" class="btn btn-primary btn-lg">
        + Yeni Müsaitlik Ekle
    </a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Eğitmen</th>
                <th>Gün</th>
                <th>Başlangıç</th>
                <th>Bitiş</th>
                <th>Aktif</th>
                <th width="150px">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(item.Trainer?.FullName)</td> 
                    <td>@item.DayOfWeek.ToString()</td>
                    <td>@item.StartTime.ToString(@"hh\:mm")</td>
                    <td>@item.EndTime.ToString(@"hh\:mm")</td>
                    <td>
                        @if (item.IsActive)
                        {
                                <span class="badge bg-success">Evet</span>
                        }
                        else
                        {
                                <span class="badge bg-danger">Hayır</span>
                        }
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.AvailabilityId" class="btn btn-sm btn-info text-white">Detay</a>
                            <a asp-action="Edit" asp-route-id="@item.AvailabilityId" class="btn btn-sm btn-warning">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@item.AvailabilityId" class="btn btn-sm btn-danger">Sil</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>