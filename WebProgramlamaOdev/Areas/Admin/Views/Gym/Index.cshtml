@model IEnumerable<WebProgramlamaOdev.Models.Gym>

@{
    ViewData["Title"] = "Salonlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold">🏢 Salonlar</h1>

    <a asp-area="Admin" asp-controller="Gym" asp-action="Create" class="btn btn-primary btn-lg">
        + Yeni Salon Ekle
    </a>
</div>

@if (Model == null || !Model.Any())
{
        <div class="alert alert-info">
            <strong>Henüz salon eklenmemiş!</strong> Yeni salon eklemek için yukarıdaki butona tıklayın.
        </div>
}
else
{
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover text-center align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Salon Adı</th>
                        <th>Adres</th>
                        <th>Telefon</th>
                        <th>Çalışma Saatleri</th>
                        <th width="150px">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                            <tr>
                                <td class="fw-bold">@item.Name</td>
                                <td>@item.Address</td>
                                <td>@item.PhoneNumber</td>

                                <td>
                                    <span class="badge bg-success">
                                @item.OpeningTime.ToString(@"hh\:mm") - @item.ClosingTime.ToString(@"hh\:mm")
                                    </span>
                                </td>

                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-area="Admin" asp-controller="Gym" asp-action="Details" asp-route-id="@item.GymId" 
                                           class="btn btn-sm btn-info text-white">Detay</a>

                                        <a asp-area="Admin" asp-controller="Gym" asp-action="Edit" asp-route-id="@item.GymId" 
                                           class="btn btn-sm btn-warning">Düzenle</a>

                                        <a asp-area="Admin" asp-controller="Gym" asp-action="Delete" asp-route-id="@item.GymId" 
                                           class="btn btn-sm btn-danger">Sil</a>
                                    </div>
                                </td>
                            </tr>
                }
                </tbody>
            </table>
        </div>
}
