@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="login-main-container">
    <div class="login-card">
        <div class="login-header">
            <h2>Giriş Yap</h2>
        </div>

        <div class="login-body">
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">E-posta</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Şifre</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="checkbox mb-3 ms-1">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        Beni Hatırla
                    </label>
                </div>

                <button id="login-submit" type="submit" class="w-100 btn btn-lg login-btn">Giriş Yap</button>

                <div class="login-footer-links">
                    <a id="forgot-password" asp-page="./ForgotPassword">Şifremi unuttum</a>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Yeni üye kaydı oluştur</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}